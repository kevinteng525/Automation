<?xml version="1.0" encoding="utf-8" ?>
<nativearchiveserverconfiguration>
  <archive>
    <enable>true</enable>
    <messagecenterlocation>\\ES1All\Share\MC</messagecenterlocation>
    <volumeidletime>172800</volumeidletime>
  </archive>
  <index>
    <enable>true</enable>
    <archiveservers>
      <!--Pay attention here that, the archive server name is case sensitive, you must specify the exactly name here. -->
      <archiveserver>ES1All.usc.com</archiveserver>
    </archiveservers>
    <componentlimitperindexaction_add>4</componentlimitperindexaction_add>
    <componentlimitperindexaction_delete>2</componentlimitperindexaction_delete>    
    <componentlimitperindexaction_repair>2</componentlimitperindexaction_repair>
    <componentlimitperindexaction_update>4</componentlimitperindexaction_update>
    <runthreshod>2</runthreshod>
  </index>
  <search>
    <enable>true</enable>
    <memoryallocated>50</memoryallocated>
  </search>
  <retrieval>
    <enable>true</enable>
  </retrieval>
</nativearchiveserverconfiguration>